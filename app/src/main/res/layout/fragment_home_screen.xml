<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_main"
        android:paddingVertical="@dimen/space_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/StyleButtonGrayBackground"
                android:id="@+id/btnAngleSmallLeft"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableEnd="@drawable/angle_small_left"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/StyleTitle16Black"
                android:id="@+id/tvCurrentMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_main_half"
                android:text="Current month"
                tools:ignore="HardcodedText" />

            <Button
                style="@style/StyleButtonGrayBackground"
                android:id="@+id/btnAngleSmallRight"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/angle_small_right"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_main"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_main_half">

                <TextView
                    style="@style/StyleTitle16Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Доходы" />

                <TextView
                    android:id="@+id/tvCurrentIncome"
                    style="@style/StyleTitle20Purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="66666666" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_main_half">

                <TextView
                    style="@style/StyleTitle16Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Расходы" />

                <TextView
                    android:id="@+id/tvCurrentExpenses"
                    style="@style/StyleTitle20Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="66666666" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_main"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_main_half">

                <TextView
                    style="@style/StyleTitle16Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Баланс за период" />

                <TextView
                    android:id="@+id/tvBalanceForPeriod"
                    style="@style/StyleTitle20Purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="4444444" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="@dimen/space_main_half">

                <TextView
                    style="@style/StyleTitle16Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Остаток на 30.11.2023" />

                <TextView
                    android:id="@+id/tvRemains"
                    style="@style/StyleTitle20Purple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="4444444" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/space_main"
                android:text="Обязательные траты за " />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/месяц\"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnAddMandatoryPayments"
                style="@style/StyleButtonGrayBackground"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/grayBackground"
                android:text="@string/plus"
                android:textColor="@color/black" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMandatoryExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/space_main_half"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="8"
            tools:listitem="@layout/item_mandatory_expenses" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>